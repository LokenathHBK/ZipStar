<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/addstore_container"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/relative_store_cont"


        >
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:id="@+id/pbar"
            android:visibility="gone"
            />

        <!-- main coaintnr-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:weightSum="10"
            >


        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
          android:layout_weight="9.1"
            android:id="@+id/tre"
            >



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#FFFFFF">








        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:id="@+id/selectstore_actionBar"

            android:background="#067BC0"
            >



            <com.esolz.su.zipstar.customviews.MyriadProBold
                android:id="@+id/title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Pending"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                />



        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:id="@+id/howtomakemoney"
            android:layout_below="@+id/selectstore_actionBar"
            android:background="#ffffff"
            >



            <com.esolz.su.zipstar.customviews.MyriadProSemibold

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="How to Make Money/Use Zipster"
                android:textColor="#000000"
                android:textSize="18sp"
                />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#989898"
android:layout_alignParentBottom="true"
                />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:weightSum="3"
            android:orientation="horizontal"
            android:layout_below="@+id/howtomakemoney"
            android:id="@+id/tab"
            >

            <LinearLayout
                android:id="@+id/message"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:background="#FFFFFF">

                <com.esolz.su.zipstar.customviews.MyriadProLight
                    android:layout_width="fill_parent"
                    android:layout_weight="1"
                    android:layout_height="fill_parent"
                    android:text="Messages"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:textAllCaps="true"/>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:background="@drawable/line1"
                    android:id="@+id/v1"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/order"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:background="#FFFFFF">


                <com.esolz.su.zipstar.customviews.MyriadProLight
                    android:id="@+id/followingtxt"
                    android:layout_width="fill_parent"
                    android:layout_weight="1"
                    android:layout_height="fill_parent"
                    android:textSize="18sp"
                    android:text="Orders"
                    android:textColor="#000000"
                    android:textAllCaps="true"

                    android:gravity="center"/>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:background="@drawable/line1"
                    android:visibility="gone"
                    android:id="@+id/v2"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/job"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:background="#FFFFFF">

                <com.esolz.su.zipstar.customviews.MyriadProLight
                    android:id="@+id/followtxt"
                    android:layout_width="fill_parent"
                    android:layout_weight="1"
                    android:layout_height="fill_parent"
                    android:text="jobs"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:textAllCaps="true"/>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:background="@drawable/line1"
                    android:id="@+id/v3"
                    android:visibility="gone"
                    />
            </LinearLayout>

        </LinearLayout>

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/pending_container"
            android:layout_below="@+id/tab"
            >
            <com.esolz.su.zipstar.customviews.MyriadProLight
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="25sp"
                android:layout_gravity="center"
                android:gravity="center"
                />
        </FrameLayout>

    </LinearLayout>

</FrameLayout>
    </LinearLayout>

        <!-- footer-->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:id="@+id/landing_container"
            android:weightSum="4"
            android:orientation="horizontal"
            android:background="#4E4E4E"
            android:layout_alignParentBottom="true"

            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:id="@+id/one"
                android:gravity="center"
                >
                <ImageButton
                    android:layout_width="35dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bottombaricon1"
                    android:layout_gravity="center"
                    android:src="@drawable/landing_selector"

                    android:id="@+id/oneimg"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:id="@+id/two"
                android:gravity="center"

                >
                <ImageButton
                    android:layout_width="35dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bottombaricon2"
                    android:layout_gravity="center"
                    android:id="@+id/twoimg"
                    android:src="@drawable/landing_selector"

                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:id="@+id/three"
                android:gravity="center"
                >
                <ImageButton
                    android:id="@+id/threeimg"
                    android:src="@drawable/landing_selector"

                    android:layout_width="35dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="@drawable/bottombaricon3"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:id="@+id/four"
                android:gravity="center"
                >
                <ImageButton
                    android:id="@+id/fourimg"

                    android:layout_width="35dp"
                    android:layout_height="40dp"
                    android:layout_alignParentLeft="true"
                    android:background="@drawable/bottombaricon4"
                    android:src="@drawable/landing_selector"

                    android:layout_gravity="center"
                    />
            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>
</FrameLayout>