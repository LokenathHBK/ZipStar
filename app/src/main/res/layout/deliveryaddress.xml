<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
android:background="#CC000000"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/selectstore_actionBar"
        android:paddingTop="20dp"


        >




        <Button
            android:id="@+id/additemto"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignBottom="@+id/title_text"
            android:layout_alignParentRight="true"
            android:background="@drawable/arrow1"
            android:layout_marginRight="30dp"
            />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_below="@+id/selectstore_actionBar"
        android:weightSum="10"
        >




        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="2"
            android:gravity="center"
            >




            <com.esolz.su.zipstar.customviews.MyriadProRegular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Write down your Delivery Address"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:layout_gravity="center"
                />
        </LinearLayout>


        <!-- address-->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1.5"
            android:weightSum="4"

            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:orientation="horizontal"
                android:layout_weight="1.5"
                android:gravity="center"

                >

                <com.esolz.su.zipstar.customviews.MyriadProRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address:"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:layout_gravity="center_vertical"
                    android:gravity="left"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:orientation="horizontal"
                android:layout_weight="2.5"
                android:padding="15dp"

                >
                <com.esolz.su.zipstar.customviews.MyriadProRegularEdit
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:layout_gravity="center"
                    android:background="@drawable/signup"
                   android:id="@+id/address"
                    />


            </LinearLayout>


        </LinearLayout>

        <!-- city-->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1.5"
            android:weightSum="4"

            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:orientation="horizontal"
                android:layout_weight="1.5"
                android:gravity="center"

                >

                <com.esolz.su.zipstar.customviews.MyriadProRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="City:"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:layout_gravity="center_vertical"
                    android:gravity="left"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:orientation="horizontal"
                android:layout_weight="2.5"
                android:padding="15dp"

                >
                <com.esolz.su.zipstar.customviews.MyriadProRegularEdit
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:layout_gravity="center"
                    android:background="@drawable/signup"
                    android:id="@+id/city"
                    />


            </LinearLayout>


        </LinearLayout>
           <!-- state-->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1.5"
            android:weightSum="4"

            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:orientation="horizontal"
                android:layout_weight="1.5"
                android:gravity="center"

                >

                <com.esolz.su.zipstar.customviews.MyriadProRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="State:"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:layout_gravity="center_vertical"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:orientation="horizontal"
                android:layout_weight="2.5"
                android:padding="15dp"

                >
                <com.esolz.su.zipstar.customviews.MyriadProRegularEdit
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:layout_gravity="center"
                    android:background="@drawable/signup"
                    android:id="@+id/state"
                    />


            </LinearLayout>


        </LinearLayout>

            <!--pin-->


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1.5"
            android:weightSum="4"

            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:orientation="horizontal"
                android:layout_weight="1.5"
                android:gravity="center"

                >

                <com.esolz.su.zipstar.customviews.MyriadProRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pin:"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:layout_gravity="center_vertical"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:orientation="horizontal"
                android:layout_weight="2.5"
                android:padding="18dp"
                >
                <com.esolz.su.zipstar.customviews.MyriadProRegularEdit
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:layout_gravity="center"
                   android:background="@drawable/signup"
                    android:id="@+id/pin"
                    />


            </LinearLayout>


        </LinearLayout>
            <!-- done-->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
          android:padding="20dp"
            >
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/done"
               android:text="Continue"
                android:textColor="#ffffff"
                android:id="@+id/done"
                />

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>
