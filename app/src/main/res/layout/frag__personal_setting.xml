<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rl"
    android:background="#F0F0F0"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/actionBar"
        android:background="#0779C0"

        >


        <com.esolz.su.zipstar.customviews.MyriadProBold
            android:id="@+id/next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Personal Settings"
            android:textColor="#ffffff"
            android:textSize="18sp"
            />



    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:layout_below="@+id/actionBar"
        android:weightSum="8"
        android:background="#F0F0F0"
        >


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:paddingLeft="25dp"
        android:id="@+id/personalinformation"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:weightSum="1"
        >
        <ImageView
            android:id="@+id/icon"
            android:layout_width="0dp"
            android:layout_height="40dp"

            android:src="@drawable/personalsetting"
            android:layout_weight=".2"
            />
        <com.esolz.su.zipstar.customviews.MyriadProSemibold
            android:id="@+id/Itemname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#000000"
            android:text="Personal Information"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:layout_weight=".7"

            />
        <ImageView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/rightarrow"
            android:layout_weight=".1"

            />
    </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:background="#ffffff"
            android:paddingLeft="25dp"
            android:id="@+id/changepassword"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:weightSum="1"
            >
            <ImageView
                android:layout_width="0dp"
                android:layout_height="40dp"

                android:src="@drawable/accountsetting"
                android:layout_weight=".2"
                />
            <com.esolz.su.zipstar.customviews.MyriadProSemibold
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="#000000"
                android:text="Change Password"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:layout_weight=".7"

                />
            <ImageView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/rightarrow"
                android:layout_weight=".1"

                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:background="#ffffff"
            android:paddingLeft="25dp"
            android:id="@+id/logout"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:weightSum="1"
            >
            <ImageView
                android:layout_width="0dp"
                android:layout_height="40dp"

                android:src="@drawable/logout"
                android:layout_weight=".2"
                />
            <com.esolz.su.zipstar.customviews.MyriadProSemibold
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="#000000"
                android:text="Log Out"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:layout_weight=".7"

                />
            <ImageView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/rightarrow"
                android:layout_weight=".1"

                />
        </LinearLayout>







    </LinearLayout>
</RelativeLayout>
